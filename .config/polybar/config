[settings]
format-padding = 1

[bar/bottom]
width = 100%
height = 20
offset-x = 0
offset-y = -4
bottom = true

background = ${xrdb:color0}
foreground = ${xrdb:color7}

spacing = -1
padding-right = 0
padding-left = 0
module-margin-left = 0 
module-margin-right = 0

font-0 = FantasqueSansMono:size=10
font-1 = fontawesome-webfont:size=10

modules-left = bspwm
modules-right = date battery volume

wm-restack = bspwm

; MODULES
[module/date]
type = internal/date

; Seconds to sleep between updates
interval = 1.0

; See "man date" for details on how to format the date string
; NOTE: if you want to use syntax tags here you need to use %%{...}
date = %b %-d

; Optional time format
time = %-I:%M

format =  <label>
label = %date% %time%

[module/volume]
type = internal/volume

; Soundcard to be used
master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default

; Name of the master mixer
; Default: Master
master-mixer = Master

format-muted = <label-muted>
format-volume =  <label-volume>
label-muted =  muted

[module/battery]
type = internal/battery

; $ ls -1 /sys/class/power_supply/
battery = BAT1
adapter = ACAD

label-charging =  %percentage%%
label-discharging =  %percentage%%
label-full =  %percentage%%

[module/bspwm]
type = internal/bspwm

; Only show workspaces defined on the same output as the bar
pin-workspaces = true

; Output mode flags after focused state label
inline-mode = false

; Create click handler used to focus workspace
enable-click = false

; Create scroll handlers used to cycle workspaces
enable-scroll = false

; Set the scroll cycle direction 
reverse-scroll = false

; Available tags:
;   <label-monitor>
;   <label-state> - gets replaced with <label-(focused|urgent|occupied|empty)>
;   <label-mode> - gets replaced with <label-(monocle|tiled|fullscreen|floating|locked|sticky|private)>
format = <label-state>

; Available tokens:
;   %name%
label-monitor = %name%

; If any values for label-dimmed-N are defined, the workspace/mode
; colors will get overridden with those values if the monitor is out of focus
; To only override workspaces in a specific state, use:
;   label-dimmed-focused
;   label-dimmed-occupied
;   label-dimmed-urgent
;   label-dimmed-empty

; Available tokens:
;   %name%
;   %icon%
;   %index%
label-focused = %index%
label-focused-padding-right = 1
label-focused-foreground = ${xrdb:color7}

; Available tokens:
;   %name%
;   %icon%
;   %index%
label-occupied = %index%
label-occupied-padding-right = 1
label-occupied-foreground = ${xrdb:color2}

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-urgent = %index%
;label-urgent-padding-right = 1
label-urgent-foreground = ${xrdb:color0}
label-urgent-background = ${xrdb:color7}

; Available tokens:
;   %name%
;   %icon%
;   %index%
label-empty = %index%
label-empty-padding-right = 1
label-empty-foreground = ${xrdb:color8}
