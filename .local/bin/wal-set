#!/usr/bin/env bash

# Source generated colors.
source "${HOME}/.cache/wal/colors.sh"

reload_dunst() {
	pkill dunst
	dunst \
		-lb "${color0}" \
		-nb "${color0}" \
		-cb "${color0}" \
		-lf "${color7}" \
		-bf "${color7}" \
		-cf "${color7}" \
		-nf "${color7}" \
		-fn "Fantasque Sans Mono 10" \
		-geometry "350x30-70+70" \
		-markup "full" \
		-word_wrap "true" \
		-separator_height "0" \
		-padding "35" \
		-horizontal_padding "35" &
}

set_gtk() {
	echo ".termite { background-color: ${background} }" > "${HOME}/.cache/wal/gtk-colors.css"
}

main() {
	set_gtk &
	reload_dunst &
}

main
